<div class="container top-offset">
  <div class="row">
    <form method="post" class="form-horizontal">
    
      <div class="inputImage"></div>

      <div class="form-group">
        <label for="inputName" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
          <input type="text" name="inputName" class="form-control" id="inputName" placeholder="Name">
        </div>
      </div>

      <div class="form-group">
        <label for="inputTwitter" class="col-sm-2 control-label">Twitter</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="inputTwitter" name="Twitter" id="inputTwitter" placeholder="Twitter">
        </div>
      </div>

      <div class="form-group">
        <label for="inputSkype" class="col-sm-2 control-label">Skype</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" name="inputSkype" id="inputSkype" placeholder="Skype">
        </div>
      </div>

      <div class="form-group">
        <label for="age" class="col-sm-2 control-label">Age</label>
        <div class="col-sm-4">
          <input type="number" class="form-control" name="age" id="age" placeholder="0">
        </div>
      </div>

      <div class="form-group">
        <label for="targetFunds" class="col-sm-2 control-label">Funds Target</label>
        <div class="col-sm-4">
          <input type="number" class="form-control" name="targetFunds" id="targetFunds" placeholder="0">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <button type="submit" class="btn btn-default btn-broad">Sign in</button>
        </div>
      </div>

    </form>
  </div>
</div>

